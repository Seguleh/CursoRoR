<h1>Book: <%= @book.title %></h1>
<p>
	<b>Author: </b>
	<%= @book.author %>
</p>
<p>
	<b>Publish Date: </b>
	<%= @book.publish_date %>
</p>
<p>
	<b>Page Count: </b>
	<%= @book.page_count %>
</p>
</br>

<table border="1">
	<thead>
		<tr>
			<th>User</td>
			<th>Comment</td>
		</tr>
	</thead>
	<tbody>
		<%= @book.comments.each do |comment| %>
			<tr>
				<td><%= comment.user.complete_name %></td>
				<td><%= comment.content %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "Create Comment", new_book_comment_path(@book) %>